#include <stdio.h>

int main() {

	int a = 2005;
	int b = 2021;

	int* pA = &a;
	int* pB = &b;


	printf("%d : a 직접 접근\n\n", a); // 직접 접근
	printf("%p : a 의 주소 \n\n", &a); // a의 주소
	printf("%d : pA 포인터를 통한 a 간접 참조\n\n", *pA); // 간접 접근(pA라는 포인터변수를 통해 a의 주소에 저장된 값을 간접적으로 참조)
	printf("%p : 포인터 pA에 저장된 a 주소\n\n", pA); // 포인터 변수(a의 주소)

	(*pA)++; // pA 포인터로 간접 참고하고 있는 a의 값에서 1을 증가시킴
	printf("%d : pA에 저장된 값 증가\n\n", *pA);	

	*pB = *(pA++); // pA 포인터 변수에 있는 주소값을 하나 증가시킴(값 1이 아닌 int 타입의 주소값이 4byte 증가)
	  // *(pA++)의 경우, pA의 주소값이 하나 증가된 주소에 저장된 값을 pB의 포인터에 저장

	printf("%p : 포인터 pA에 저장된 증가된 a의 주소값\n\n", pA);
	printf("%d : 포인터 pB에 저장된 값\n\n", *pB); // 값은 어떤 값이 들어갔는지 모르는 상태, 출력이 2006인 것은 임의로 정해진 상태	
	printf("%p : pB 포인터에 저장된 b의 주소값\n\n", pB);		 

	return 0;
}
