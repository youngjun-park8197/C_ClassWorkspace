#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int Prompt(const char* ptString, int* val);
int chrFind(const char* str, char chr);
int strFind(const char* str, const char* findStr);

int main() {

	//int inputA, inputB, result;

	/*
